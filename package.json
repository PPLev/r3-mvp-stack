{
  "name": "r3-mvp-stack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/r3-dev/r3-mvp-stack.git",
  "author": "milanjrodd <milanrodd@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter=./apps/* --reporter=append-only run dev",
    "dev:frontend": "pnpm --filter=./apps/frontend --reporter=append-only run dev",
    "dev:backend": "pnpm --filter=./apps/backend --reporter=append-only run dev",
    "build": "pnpm --filter=./apps/* --reporter=append-only run build",
    "ci": "pnpm install --frozen-lockfile",
    "ci:prod": "pnpm install --frozen-lockfile --prod",
    "ngrok": "ngrok http 3000",
    "format": "prettier --write \"**/*.{js,ts,tsx,json}\"",
    "install-sqlite-mac-m1": "npm install -d sqlite3 --build-from-source --target_arch=arm64 --fallback-to-build && rm -rf package-lock.json"
  },
  "devDependencies": {
    "@crashmax/prettier-config": "4.1.0",
    "@types/node": "20.8.10",
    "ngrok": "5.0.0-beta.2",
    "sqlite3": "5.1.6"
  },
  "engines": {
    "node": "^20"
  }
}
